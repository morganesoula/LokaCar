<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_activity_list_locations_nav_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListLocationsActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="2dp"
        tools:context=".ListLocationsActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/activity_list_locations_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorPrimary"
            android:theme="@style/ToolbarStyle" />

        <TextView
            android:id="@+id/empty_list_locations_txt_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/EmptyListLocationMessageTheme" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/locations_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/activity_list_locations_toolbar">

        </android.support.v7.widget.RecyclerView>

    </android.support.constraint.ConstraintLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/activity_list_locations_nav_drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/activity_main_nav_header"
        app:menu="@menu/menu_drawer" />

</android.support.v4.widget.DrawerLayout>